<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PostItemFragment"></style>

    <style name="PostItemFragment.PostImage">
        <item name="android:layout_width">@dimen/size_image_post</item>
        <item name="android:layout_height">@dimen/size_image_post</item>
        <item name="android:layout_marginLeft">@dimen/margin_image_post</item>
        <item name="android:layout_marginBottom">@dimen/margin_image_post</item>
        <item name="android:layout_marginTop">@dimen/margin_image_post</item>

    </style>

    <style name="PostItemFragment.ContainerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>

    </style>

    <style name="PostItemFragment.AuthorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_author</item>
    </style>

    <style name="PostItemFragment.TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_text_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text_title</item>
        <item name="android:layout_marginRight">@dimen/margin_right_text_title</item> />
    </style>



    <style name="PostItemDetailsFragment"/>

    <style name="PostItemDetailsFragment.FitSystemWindow">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="PostItemDetailsFragment.FitSystemWindow.AppBarLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_app_bar_layout</item>
    </style>

    <style name="PostItemDetailsFragment.FitSystemWindow.CollapsingToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PostItemDetailsFragment.FitSystemWindow.PostImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PostItemDetailsFragment.ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="PostItemDetailsFragment.PostTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PostItemDetailsFragment.PostText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_post</item>
        <item name="android:lineSpacingExtra">@dimen/space_between_lines</item>
        <item name="android:text">@string/test_post_content</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="PostItemDetailsFragment.LikeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:src">@mipmap/ic_like</item>
    </style>

    <style name="PostItemDetailsFragment.TitleComment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_title_comment</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PostItemFragment.PostImage.TitleComment">
        <item name="android:src">@drawable/common_full_open_on_phone</item>
    </style>

    <style name="PostItemDetailsFragment.CollapsedBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_collapsed_bar_layout</item>
    </style>

</resources>
